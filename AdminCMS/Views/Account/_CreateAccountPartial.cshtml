<script>
    // Toggle password visibility
    window.togglePasswordVisibility = function(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector('i');

        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('bi-eye-fill');
            icon.classList.add('bi-eye-slash-fill');
        } else {
            input.type = 'password';
            icon.classList.remove('bi-eye-slash-fill');
            icon.classList.add('bi-eye-fill');
        }
    };

    // Handle file selection
    window.handleCreateFileSelect = function(input) {
        console.log('handleCreateFileSelect called', input);

        const file = input.files && input.files[0];
        const errorDiv = document.getElementById('create-upload-error');
        const preview = document.getElementById('previewCreateAvatar');
        const isChangedField = document.getElementById('createIsChanged');

        console.log('File selected:', file);

        if (!file) {
            console.log('No file selected');
            return;
        }

        // Hide any previous errors
        if (errorDiv) {
            errorDiv.classList.add('d-none');
        }

        // Validation logic
        if (!['image/png', 'image/jpeg', 'image/jpg'].includes(file.type)) {
            console.log('Invalid file type:', file.type);
            showCreateError("ƒê·ªãnh d·∫°ng file kh√¥ng h·ªó tr·ª£.");
            input.value = "";
            return;
        }

        if (file.size > 5 * 1024 * 1024) {
            console.log('File too large:', file.size);
            showCreateError("Dung l∆∞·ª£ng file v∆∞·ª£t qu√° 5MB.");
            input.value = "";
            return;
        }

        // Set IsChanged to true
        if (isChangedField) {
            isChangedField.value = 'true';
            console.log('IsChanged set to:', isChangedField.value);
        }

        // Show preview
        if (preview) {
            const reader = new FileReader();
            reader.onload = function(e) {
                console.log('FileReader onload triggered');
                preview.src = e.target.result;
            };
            reader.onerror = function(e) {
                console.error('FileReader error:', e);
                showCreateError("Kh√¥ng th·ªÉ ƒë·ªçc file. Vui l√≤ng th·ª≠ l·∫°i.");
            };
            reader.readAsDataURL(file);
        }
    };

    window.showCreateError = function(msg) {
        console.log('showCreateError called:', msg);
        const errorDiv = document.getElementById('create-upload-error');
        const errorMessage = document.getElementById('create-error-message');
        if (errorDiv && errorMessage) {
            errorMessage.textContent = msg;
            errorDiv.classList.remove('d-none');
        }
    };
</script>
