@model WebApp.Models.PromptConfig.PromptConfigDto

<div class="edit-modal-container">
    <div class="modal-header border-0 pb-0">
        <h5 class="modal-title fw-bold">
            <i class="bi bi-pencil-square text-primary me-2"></i>Chỉnh sửa từ điển doanh nghiệp
        </h5>
        <button type="button" class="btn-close-modal" onclick="closeEditModal()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <div class="modal-body">
        <p class="text-muted small mb-4">
            Cập nhật từ điển doanh nghiệp.
        </p>

        <form id="editPromptConfigForm">
            <input type="hidden" id="editPromptConfigId" name="Id" value="@Model.Id" />

            <div class="row g-3 mb-3">
                <div class="col-md-12">
                    <label for="editPromptConfigKey" class="form-label fw-semibold text-secondary small">
                        <i class="bi bi-card-heading me-1"></i>Tên <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control bg-light border-0 py-2"
                           id="editPromptConfigKey" name="Key"
                           value="@Model.Key"
                           placeholder="Nhập tên" required>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-12">
                    <label for="editPromptConfigValue" class="form-label fw-semibold text-secondary small">
                        <i class="bi bi-card-heading me-1"></i>Giá trị <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control bg-light border-0 py-2"
                           id="editPromptConfigValue" name="Value"
                           value="@Model.Value"
                           placeholder="Nhập giá trị" required>
                </div>
            </div>
        </form>
    </div>

    <div class="modal-footer border-0 justify-content-center pt-0">
        <button type="button" class="btn btn-light px-4 rounded-pill border" onclick="closeEditModal()">
            Hủy bỏ
        </button>
        <button type="button" class="btn btn-primary px-4 rounded-pill shadow" id="btnSubmitEditPromptConfig">
            <i class="bi bi-check-lg me-1"></i> Lưu thay đổi
        </button>
    </div>
</div>

<style>
    .edit-modal-container {
        padding: 5px;
    }

    .modal-header {
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title {
        font-size: 1.25rem;
        color: #2c3e50;
    }

    .btn-close-modal {
        background: none;
        border: none;
        font-size: 1.2rem;
        color: #adb5bd;
        transition: 0.2s;
        cursor: pointer;
    }

        .btn-close-modal:hover {
            color: #495057;
            transform: rotate(90deg);
        }

    .modal-body {
        padding: 0 25px 20px 25px;
        max-height: 70vh;
        overflow-y: auto;
    }

        .modal-body textarea {
            min-height: 150px;
            resize: vertical;
        }

    .form-control:focus, .form-select:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border: 1px solid #0d6efd !important;
    }

    .form-label {
        margin-bottom: 8px;
    }

    .modal-footer {
        padding: 15px 25px 25px 25px;
        gap: 10px;
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-light:hover {
        background-color: #e9ecef;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }
</style>
