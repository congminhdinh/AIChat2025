@{
    ViewData["Title"] = "Cấu hình từ điển doanh nghiệp";
}

@section Styles {
    <style>
        .page-container {
            width: 95%;
            max-width: 1400px;
            margin: 30px auto;
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.02);
            max-height: calc(100vh - 120px);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* --- PAGE HEADER AREA --- */
        .page-header {
            display: flex !important;
            flex-direction: row !important;
            flex-wrap: nowrap !important;
            align-items: center !important;
            justify-content: space-between !important;
            width: 100% !important;
            margin-bottom: 20px;
            gap: 15px;
        }

        .page-title {
            flex-shrink: 0 !important;
            white-space: nowrap;
            font-size: 1.25rem;
            font-weight: 700;
        }

        .header-actions {
            display: flex !important;
            flex-direction: row !important;
            flex-wrap: nowrap !important;
            align-items: center !important;
            gap: 10px;
            flex-grow: 1;
            justify-content: flex-end;
        }

        .search-box {
            position: relative;
            flex-grow: 1;
            max-width: 400px;
            min-width: 120px;
        }

        .search-input {
            width: 100%;
            padding: 10px 15px 10px 40px;
            border-radius: 25px;
            border: 1px solid #e0e0e0;
            background-color: #f8faff;
            font-size: 0.9rem;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            border-color: #0d6efd;
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            width: 18px;
            height: 18px;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-shrink: 0;
            flex-wrap: nowrap;
        }

        #data-list-container {
            flex: 1;
            overflow-y: auto;
            min-height: 400px;
        }

        #modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            backdrop-filter: blur(4px);
            animation: fadeIn 0.2s ease;
        }

            #modal-overlay.active {
                display: flex;
                align-items: center;
                justify-content: center;
            }

        #modal-content-container {
            background-color: white;
            border-radius: 16px;
            padding: 0;
            max-width: 700px;
            width: 90%;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
            animation: slideUp 0.3s ease;
            max-height: 90vh;
            overflow-y: auto;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .loading-spinner {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

            .loading-spinner i {
                font-size: 3rem;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    </style>
}

<div class="page-container">
    <div class="page-header">
        <div class="page-title">
            <i class="bi bi-chat-square-text-fill"></i> Cấu hình từ điển doanh nghiệp
        </div>

        <div class="header-actions">
            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" id="txtSearchPromptConfig" class="search-input" placeholder="Tìm kiếm theo tên...">
            </div>

            <div class="action-buttons">
                <button class="icon-btn btn-success" id="btnCreatePromptConfig" data-bs-toggle="tooltip" title="Tạo mới">
                    <i class="ti ti-plus"></i>
                </button>
            </div>
        </div>
    </div>

    <div id="data-list-container">
        <div class="loading-spinner">
            <i class="bi bi-hourglass-split"></i>
            <p class="mt-3">Đang tải dữ liệu...</p>
        </div>
    </div>
</div>

<div id="modal-overlay" class="modal-overlay">
    <div id="modal-content-container"></div>
</div>

@section Scripts {
    <script src="~/Scripts/PromptConfig/prompt-config.js" asp-append-version="true"></script>
}
