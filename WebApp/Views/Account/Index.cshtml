@{
    ViewData["Title"] = "Quản lý Tài khoản";
}

@section Styles {
    <style>
        .page-container {
            width: 95%;
            max-width: 1400px;
            margin: 30px auto;
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.02);
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2c3e50;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .search-box {
            position: relative;
            max-width: 400px;
            flex-grow: 1;
        }

        .search-input {
            width: 100%;
            padding: 10px 15px 10px 40px;
            border-radius: 25px;
            border: 1px solid #e0e0e0;
            background-color: #f8faff;
            font-size: 0.9rem;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            border-color: #0d6efd;
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            width: 18px;
            height: 18px;
        }

        .btn-create {
            background: #0d6efd;
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            padding: 0;
            border-radius: 50%;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            transition: all 0.2s;
        }

        .btn-create:hover {
            background: #0b5ed7;
            box-shadow: 0 2px 8px rgba(13, 110, 253, 0.3);
            transform: scale(1.05);
        }

        .btn-refresh {
            background: #6c757d;
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            padding: 0;
            border-radius: 50%;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            transition: all 0.2s;
        }

        .btn-refresh:hover {
            background: #5c636a;
            transform: scale(1.05);
        }

        #data-list-container {
            min-height: 400px;
        }

        #modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            backdrop-filter: blur(4px);
            animation: fadeIn 0.2s ease;
        }

        #modal-overlay.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #modal-content-container {
            background-color: white;
            border-radius: 16px;
            padding: 0;
            max-width: 600px;
            width: 90%;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
            animation: slideUp 0.3s ease;
            max-height: 90vh;
            overflow-y: auto;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .loading-spinner {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

        .loading-spinner i {
            font-size: 3rem;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
}

<div class="page-container">
    <div class="page-header">
        <div class="page-title">
            <i class="bi bi-people-fill"></i> Quản lý Tài khoản
        </div>

        <div class="search-box">
            <i class="bi bi-search search-icon"></i>
            <input type="text" id="txtSearchAccount" class="search-input" placeholder="Tìm kiếm theo tên...">
        </div>

        <button class="btn-create" id="btn-create-account" data-bs-toggle="tooltip" title="Tạo tài khoản mới">
            <i class="ti ti-user-plus"></i>
        </button>

        <button class="btn-refresh" id="btn-refresh-accounts" data-bs-toggle="tooltip" title="Làm mới">
            <i class="ti ti-refresh"></i>
        </button>
    </div>

    <div id="data-list-container">
        <div class="loading-spinner">
            <i class="bi bi-hourglass-split"></i>
            <p class="mt-3">Đang tải dữ liệu...</p>
        </div>
    </div>
</div>

<div id="modal-overlay" class="modal-overlay">
    <div id="modal-content-container"></div>
</div>

@section Scripts {
    <script src="~/Scripts/Account/account.js" asp-append-version="true"></script>
}
