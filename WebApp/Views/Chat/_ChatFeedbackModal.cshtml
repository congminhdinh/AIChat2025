@* Partial View: _ChatFeedbackModal.cshtml
    Mô tả: Modal để người dùng gửi phản hồi chi tiết về câu trả lời của Bot
*@

<div class="feedback-modal-container">
    <h3 class="modal-header-title">Đánh giá chi tiết</h3>

    <div class="modal-body-content">
        <input type="hidden" id="feedbackMessageId" />
        <input type="hidden" id="feedbackId" />

        <label for="feedbackCategory" class="input-label">Danh mục</label>
        <div class="custom-select-wrapper">
            <select id="feedbackCategory" class="custom-select">
                <option value="1">Sai kiến thức pháp luật</option>
                <option value="2">Thông tin hết hiệu lực</option>
                <option value="3">Câu trả lời mâu thuẫn</option>
                <option value="4">Hiểu sai ý người dùng</option>
                <option value="5">Trích dẫn sai nguồn</option>
                <option value="6">Thiếu căn cứ pháp lý</option>
                <option value="7">Nguồn không liên quan</option>
                <option value="8">Trả lời quá lan man</option>
                <option value="9">Trả lời quá sơ sài</option>
                <option value="10">Phản hồi quá chậm</option>
                <option value="11">Lỗi hiển thị/Định dạng</option>
                <option value="99">Khác</option>
            </select>
        </div>

        <label for="feedbackContent" class="input-label" style="margin-top: 20px;">Nội dung chi tiết</label>
        <div class="custom-textarea-wrapper">
            <textarea id="feedbackContent" class="custom-textarea" rows="5" placeholder="Vui lòng mô tả chi tiết vấn đề bạn gặp phải..."></textarea>
        </div>
        <p class="hint-text">Phản hồi của bạn giúp chúng tôi cải thiện chất lượng dịch vụ.</p>
    </div>

    <div class="modal-footer-actions">
        <button type="button" class="icon-btn" onclick="closeFeedbackModal()" data-bs-toggle="tooltip" title="Hủy">
            <i class="ti ti-x"></i>
        </button>
        <button type="button" class="icon-btn btn-primary" onclick="submitFeedback()" data-bs-toggle="tooltip" title="Gửi phản hồi">
            <i class="ti ti-check"></i>
        </button>
    </div>
</div>

